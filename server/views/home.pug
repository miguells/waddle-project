extends layout
block content
 
    a(href='/nueva')
        button.btn.btn-primary Nueva
    button.btn.btn-block.btn-default.quedadas-toggle Ver todas

    #nuevas
        each nueva in nuevas
            .row.quedada(id=nueva._id)
                .col-md-4.tipo
                    span #{nueva.tipo}
                .col-md-4.fecha
                    span #{nueva.fecha}, #{nueva.hora}
                .col-md-4.participante
                each participante in nueva.participantes
                    span #{participante}
                button.btn.btn-warning(onClick="edit('"+nueva+"')") Edit 
                button.btn.btn-danger(onClick="remove('"+nueva._id+"')") Remove 
            .modal.fade(tabindex='-1', role='dialog')
            .modal-dialog(role='document')
                .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
                    h4.modal-title Editar
                .modal-body
                    form
                        .form-group
                            label(for="fecha") Fecha
                            input.form-control(type="text", placeholder="15/10/2016", name="fecha", id="fecha",value=nueva.fecha required)
                        .form-group
                            label(for="hora") Hora
                            input.form-control(type="text", placeholder="18:00", name="hora", id="hora",pattern="([01]?[0-9]|2[0-3]):[0-5][0-9]" value=nueva.hora, required)

                        .radio
                            label
                                if nueva.tipo==="Digital"
                                    input(type="radio" name="tipo" value="Digital", selected)
                                else
                                    input(type="radio" name="tipo" value="Digital")
                                span Digital            
                        .radio
                            label
                                if nueva.tipo==="Presencial"
                                    input(type="radio" name="tipo" value="Presencial", selected)
                                else
                                    input(type="radio" name="tipo" value="Presencial")
                                span Presencial
                        
                        
                        .form-group
                            label(for="participantes")
                            input.form-control(type="text", placeholder="participantes", name="participantes", id="participantes")
                        .form-group
                            textarea.form-control(name="hacer",rows="5")
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
                    button.btn.btn-primary(type='button') Save changes
 
    #viejas

    script(src='/js/quedadas.js')

